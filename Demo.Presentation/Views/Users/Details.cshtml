@using Demo.Presentation.ViewModels.ManagerViewModel.UserManager
@model UserViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="my-5 w-75">User Details</h1>
<br />

<ul class="nav nav-tabs" id="userTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <partial name="UserPartialViews/DetailsDeleteUserPartialView" />
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-controller="Users" asp-action="Index" class="btn btn-outline-dark">Back To list</a>
    </div>
</div>



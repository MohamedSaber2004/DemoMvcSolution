@using Demo.Presentation.ViewModels.ManagerViewModel
@using Demo.Presentation.ViewModels.ManagerViewModel.UserManager
@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

@if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
{
    <div aria-live="polite" aria-atomic="true" class="toast-container position-fixed p-3" style="bottom: 25px; right:25px; z-index: 100;">
        <div class="toast fade show " role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto text-success">Success!!</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                @TempData["Message"]
            </div>
        </div>
    </div>
}

<h1 class="my-3">All Users</h1>
<br />


<div class="m-2">
    <form asp-controller="Users" asp-action="Index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="SearchUserName" placeholder="Search User By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />
        </div>
    </form>

</div>


@if (Model?.Any() ?? false)
{
    <table class="table table-striped table-hover mt-2">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.Fname)</th>
                <th>@Html.DisplayNameFor(U => U.Lname)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Fname</td>
                    <td>@user.Lname</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <select name="SelectedRole" class="form-control">
                            @* <option value="">Select Role Type</option> *@
                            @if (user.Roles.Any())
                            {
                                @foreach (var role in user.Roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            }
                            else
                            {
                                <option value="">No Roles</option>
                            }

                        </select>
                    </td>

                    <partial name="_ButtonsPartialView" model="@user.Id" />

                    <td>
                        <a asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-2">
        <h2>No User Found !!</h2>
    </div>
}